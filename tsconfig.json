{
  "compilerOptions": {
    "lib": ["dom"],
    "jsx": "react",
    "allowJs": true,
    "target": "es2016",
    "outDir": "./outDir",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "paths": {
      "*": ["./types/*.d.ts"],
      "toolkit/*": ["./src/*"],
      "toolkit-reports/*": ["./src/features/toolkit-reports/*"]
    }
  },
  "include": ["./src/**/*"]
}
